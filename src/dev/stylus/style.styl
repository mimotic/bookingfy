@import "nib"
@import "../../../bower_components/normalize.styl/normalize.styl"

main-blue = #013660
dark-gray = #333333
light-gray =  #818181

activo = #6cfc86
desactivado = #999999
verdeOk = #59AB3E

rosaPalido = #ff686f
grisClaro = #ededed
verdeAguoso = #53ded8

//reset
figure
	margin 0
body
	font-family: 'Roboto', sans-serif;
	font-size 16px
	margin 0

body.outapp
	background rosaPalido

body.inapp
	background url('../img/background.png') repeat

section,
body
	position relative

// OOCSS
.text-center
	text-align center



// estructura principal
.header
	background-color main-blue
	margin 0
	overflow hidden
	display none
	min-height 117px

.footer
	background-color light-gray
	color dark-gray
	 margin-top 3em
	 width 100%
	 padding 2em 0
	 font-size: .8rem
	 height auto
	 overflow hidden
	 float left

.logo
	position relative
	width 100%
	img
		margin 1em auto
		display	block

// listado de deportes
.tipo-pistas
	margin 0
	padding 1em


.deporte
	position relative
	display inline-block
	padding 3em 0
	margin .2em
	width 45%
	background-color #c3c3c3

.pista
	position relative
	display inline-block
	padding 3em 0
	margin .2em
	width 45%
	background-color #c3c3c3

// listado tipo-pistas

#calendario
	position relative
	width 100%
	padding 0
	margin 2em 0

.tipo-calendario
	width 50%
	&.doble
		margin 0
		float left
	&.simple
		margin 0 auto
		float none
	ul
		margin 0
		padding 0

.hora
	position relative
	display block
	padding 2em 0
	margin .2em
	&[data-estado="libre"]
		background-color activo
	&[data-estado="ocupado"]
		background-color desactivado


// FORMS

// login
.login_users
	position relative
	max-width: 25em;
	background: grisClaro;
	height: auto;
	overflow hidden
	margin: 0 .5em;
	box-shadow: 0 1px 3px #999;
	label,
	input
		position relative
		clear both
		float left
		width 300px
		margin 1em auto
		height 2em
	label
		text-align center


	#dologin,
	#goregistro
		text-transform uppercase
		-webkit-transition: background-color .5s ease-out;
		-moz-transition: background-color .5s ease-out;
		-o-transition: background-color .5s ease-out;
		transition: background-color .5s ease-out;
		display inline-block
		border-radius 0px
		text-decoration none
		text-align center
		color white
		padding .8em 0 0
		margin-top 4em
		height 2em
		width 50%;
		background-color verdeOk
		box-shadow 0 0 5px black
		font-weight 300
		bottom 0
		float left
		clear none
		&:hover
			background-color verdeAguoso
	#goregistro
		background-color grey

// validaci√≥n
.error
	display none


