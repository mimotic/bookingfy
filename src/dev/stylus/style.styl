@import "nib"
@import "../../../bower_components/normalize.styl/normalize.styl"

main-blue = #013660
dark-gray = #333333
light-gray =  #818181

activo = #6cfc86
desactivado = #999999

//reset
figure
	margin 0
body
	font-size 16px
	margin 0

// OOCSS
.text-center
	text-align center



// estructura principal
.header
	background-color main-blue
	margin 0
	overflow hidden
.footer
	background-color light-gray
	color dark-gray
	 margin-top 3em
	 width 100%
	 padding 2em 0
	 font-size: .8rem
	 height auto
	 overflow hidden
	 float left

.logo
	position relative
	width 100%
	img
		margin 1em auto
		display	block

// listado de deportes
.tipo-pistas
	margin 0
	padding 1em


.deporte
	position relative
	display inline-block
	padding 3em 0
	margin .2em
	width 45%
	background-color #c3c3c3

.pista
	position relative
	display inline-block
	padding 3em 0
	margin .2em
	width 45%
	background-color #c3c3c3

// listado tipo-pistas

#calendario
	position relative
	width 100%
	padding 0
	margin 2em 0

.tipo-calendario
	width 50%
	&.doble
		margin 0
		float left
	&.simple
		margin 0 auto
		float none
	ul
		margin 0
		padding 0

.hora
	position relative
	display block
	padding 2em 0
	margin .2em
	&[data-estado="libre"]
		background-color activo
	&[data-estado="ocupado"]
		background-color desactivado


// FORMS


// validaci√≥n
.error
	display none

