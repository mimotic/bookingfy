.hora
	cursor pointer
	position relative
	display block
	background-color white
	-webkit-transition: box-shadow .3s ease-out;
	-moz-transition: box-shadow .3s ease-out;
	-o-transition: box-shadow .3s ease-out;
	transition: box-shadow .3s ease-out;
	box-shadow 0 0 0 grisClaro
	text-align left
	border-top 1px solid #F0F0F0
	padding .6em .8em
	margin 0
	&:last-child
		border-bottom 1px solid #F0F0F0
	&:hover
		background #EFEFEF

.hora[data-estado="ocupado"]
	cursor default
	color grisClaro
	&:hover
		background white
	&:hover:after
		content: ' no anulable'
		text-transform uppercase
.hora[data-estado="libre"]
	&:hover:after
		content: ' reservar'
		color: verdeOk
		text-align center
		text-transform uppercase
.hora[data-estado="owner"]
	&:hover:after
		content: ' anular'
		color: rosaPalido
		text-align center
		text-transform uppercase
