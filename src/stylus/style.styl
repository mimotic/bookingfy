// LOGIN / REGISTRO
#logo
	figure
		margin 2em auto
		width 300px

.inapp
	#logo
		display none

.login_users
	position relative
	max-width: 600px;
	background: grisClaro;
	height: auto;
	overflow hidden
	margin: 0 auto;
	box-shadow: 0 0px 5px dark-gray;
	padding 1em
	border-radius 2px
	label,
	input
		position relative
		margin .5em auto
		width 500px
		height 2em
		padding .5em
	label
		text-align center
	#dologin,
	#doregister,
	#logout,
	#doactualizar
		text-transform uppercase

		-webkit-transition: background-color .8s ease-out;
		-moz-transition: background-color .8s ease-out;
		-o-transition: background-color .8s ease-out;
		transition: background-color .8s ease-out;

		-webkit-transition: box-shadow .2s ease-out;
		-moz-transition: box-shadow .2s ease-out;
		-o-transition: box-shadow .2s ease-out;
		transition: box-shadow .2s ease-out;

		-webkit-transition: color .2s ease-out;
		-moz-transition: color .2s ease-out;
		-o-transition: color .2s ease-out;
		transition: color .2s ease-out;

		box-shadow none
		display inline-block
		border-radius 3px
		text-decoration none
		text-align center
		color white
		padding .8em 3em
		margin 2em auto 2em
		background-color verdeAguoso
		font-weight 300
		&:hover
			color dark-gray
			background-color grisClaro
			box-shadow 0 0 3px dark-gray
	#goregistro,
	#gologin
		color #736E6E
	span
		font-weight 300
		color #949494
		text-align center
		display block
		margin 1em auto 1.5em
	span.title-span
		font-weight 400
		color dark-gray
	#error
		position relative
		border 1px solid rosaPalido
		padding 1em
		bottom -30px
		background rosaPalido
		color white
		text-align center
		ul
			margin: 0
			padding 0
			list-style none
			text-align center
			li
				text-align center
				margin: 0
				padding: 0
	#no-error
		position relative
		border 1px solid verdeOk
		padding 1em
		bottom -30px
		background verdeOk
		color white
		text-align center

@media screen and (max-width:650px)
	.login_users
		max-width: 600px;
		margin: 0 1em;
		label,
		input
			margin .5em auto
			width 94%



// validaci√≥n
.error
	display none

// logout
#logout
	text-transform uppercase
	-webkit-transition: color .3s ease-out;
	-moz-transition: color .3s ease-out;
	-o-transition: color .3s ease-out;
	transition: color .3s ease-out;

	-webkit-transition: background-color .6s ease-out;
	-moz-transition: background-color .6s ease-out;
	-o-transition: background-color .6s ease-out;
	transition: background-color .6s ease-out;

	box-shadow none
	display inline-block
	position absolute
	right 0
	top 0
	border-radius 3px
	border 1px solid #3F424B
	text-decoration none
	text-align center
	color #3F424B
	padding .8em 3em
	margin 2em
	font-weight 100
	background-color transparent
	&:hover
		color white
		background-color #3F424B


// PERFIL
