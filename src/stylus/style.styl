// listado tipo-pistas



// header

.user-welcome
	display inline-block
	color white
	text-decoration none
	padding-left 2em


// #calendario
#calendario
	display block
	margin 0 auto
	width 100%

.tipo-calendario
	width 50%
	float left

	&.doble
		margin 0
	&.simple
		margin 0 auto
	ul
		margin 0
		padding 0
.calendario-list
	padding 1em
	background transparent
	margin .5em
	h2
		color #5F5F5F
		font-weight 300
	ul
		padding 1em
		li
			padding 1em
			margin .5em 0
			border-radius 2px
.hora
	position relative
	display block
	background-color white
	-webkit-transition: box-shadow .3s ease-out;
	-moz-transition: box-shadow .3s ease-out;
	-o-transition: box-shadow .3s ease-out;
	transition: box-shadow .3s ease-out;
	box-shadow 0 0 0 grisClaro
	&[data-estado="libre"]
		background-color activo
		cursor pointer
		&:hover
			box-shadow 0 0 6px #666
			background-color activo
	&[data-estado="ocupado"]
		  	color: rgb(129, 129, 129)
		  	background-color desactivado
		&:hover
			background-color desactivado
	&[data-estado="owner"]
		background-color rosaPalido
		cursor pointer
		&:hover
			box-shadow 0 0 6px #666
			background-color rosaPalido

#modalCalendario
	position absolute
	z-index 999
	background rgba(0, 0, 0, 0.83);
	filter: blur(80px);
	height 100%
	width 100%
	top 0
	left 0
	display none
	>div
		position: fixed;
		padding: 1.5em;
		border: 8px solid #ededed;
		height: 350px;
		width: 550px;
		/* margin: 7em auto; */
		background: #fff;
		-webkit-box-shadow: 0 0 6px #818181;
		box-shadow: 0 0 6px #818181;
		top: 94px;
		left: 50%;
		margin-left: -275px;

