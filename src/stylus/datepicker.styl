// calendario
#datepickerDay
	max-width 340px
	margin 1em 0 0 5em
#placeDatepicker
	font-size 100%
	a
		text-decoration none
	.ui-datepicker-header
		.ui-datepicker-prev,
		.ui-state-hover.ui-datepicker-prev-hover
			position: absolute !important
			top: 0px !important
			margin-left: 11px !important
			left auto !important
			right auto !important
	.ui-datepicker-header
		.ui-datepicker-next,
		.ui-state-hover.ui-datepicker-next-hover
			position: absolute !important
			top: 0px !important
			margin-left: 290px !important
			left auto !important
			right auto !important
	.ui-widget
		font-family: "Lucida Grande", "Lucida Sans Unicode", Helvetica, Arial, Verdana, sans-serif;
		border: none;
		border-radius: 0;
		-webkit-border-radius: 0;
		-moz-border-radius: 0;
	.ui-datepicker
		padding 0
	.ui-datepicker-header
		border:none
		background transparent
		font-weight normal
		font-size 18px
	.ui-datepicker-header .ui-state-hover
		background: transparent;
		border-color: transparent;
		cursor: pointer;
		border-radius: 0;
		-webkit-border-radius: 0;
		-moz-border-radius: 0;
	thead
		background #2e3641
	tr
		height 2.7em
	table
		box-shadow 0 1px 3px dark-gray
	.ui-datepicker .ui-datepicker-title
		margin-top: .4em
		margin-bottom: .3em
		color: #2E3641
		font-size 1.2
		text-align center


#placeDatepicker .ui-datepicker .ui-datepicker-prev-hover,
#placeDatepicker .ui-datepicker .ui-datepicker-next-hover,
#placeDatepicker .ui-datepicker .ui-datepicker-next,
#placeDatepicker .ui-datepicker .ui-datepicker-prev {
	top: .9em;
	border:none;
}

.ui-datepicker-prev.ui-state-disabled
	color white
	cursor default !important

#placeDatepicker .ui-datepicker .ui-datepicker-prev-hover {
	left: 2px;
}

#placeDatepicker .ui-datepicker .ui-datepicker-next-hover {
	right: 2px;
}

#placeDatepicker .ui-datepicker .ui-datepicker-next span,
#placeDatepicker .ui-datepicker .ui-datepicker-prev span {
	background-image: url(images/ui-icons_ffffff_256x240.png);
	background-position: -32px 0;
	margin-top: 0;
	top: 0;
	font-weight: normal;
}

#placeDatepicker .ui-datepicker .ui-datepicker-prev span {
	background-position: -96px 0;
}

#placeDatepicker .ui-datepicker table {
	margin: 0;
}

#placeDatepicker .ui-datepicker th {
	padding: 1em 0;
	color: #ccc;
	font-size: 13px;
	font-weight: normal;
	border: none;
	border-top: 1px solid #3a414d;
}

#placeDatepicker .ui-datepicker td {
	background: #f97e76;
	border: none;
	padding: 0;
}

#placeDatepicker td .ui-state-default {
	background: transparent;
	border: none;
	text-align: center;
	padding: .8em;
	margin: 0;
	font-weight: normal;
	color: #efefef;
	font-size: 16px;
}

#placeDatepicker .ui-state-disabled  {
	opacity: 1;
}

#placeDatepicker .ui-state-disabled .ui-state-default {
	color: #fba49e;
}

#placeDatepicker td .ui-state-active,
#placeDatepicker td .ui-state-hover {
	background: #2e3641;
}


